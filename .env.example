# Centre AI - MCP Server Configuration
# Copy this file to .env and modify the values

# ========================================
# ADMIN CREDENTIALS
# ========================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme_minimum_8_chars

# ========================================
# SECURITY TOKENS
# Generate with: openssl rand -hex 32
# ========================================
SECRET_KEY=generate_a_secure_secret_key_here
MCP_AUTH_TOKEN=generate_a_secure_mcp_token_here

# ========================================
# CLAUDE CONNECTOR OAUTH
# For Claude.ai MCP Connector integration
# Generate client_id/secret or use pre-configured values
# ========================================
CLAUDE_OAUTH_CLIENT_ID=claude_centre_ai
CLAUDE_OAUTH_CLIENT_SECRET=generate_a_secure_client_secret_here

# ========================================
# DATABASE
# ========================================
POSTGRES_DB=centre_ai
POSTGRES_USER=centre_ai
POSTGRES_PASSWORD=secure_database_password

# ========================================
# PORTS (exposed to localhost only)
# ========================================
MCP_PORT=2068
ADMIN_PORT=2069
HTTP_PORT=2070
SSE_PORT=2071
STREAM_PORT=2072

# ========================================
# LOGGING
# Options: DEBUG, INFO, WARNING, ERROR
# ========================================
LOG_LEVEL=INFO

# ========================================
# CUSTOMIZATION
# ========================================
# Git Repository URL for client downloads
CENTRE_AI_REPO_URL=https://raw.githubusercontent.com/your-org/centre-ai/main

# ========================================
# DOMAIN CONFIGURATION
# ========================================
# External domain for OAuth/MCP services
EXTERNAL_DOMAIN=memory.cnull.net

# External base URL (auto-detected if not set)
# Example: https://memory.cnull.net
EXTERNAL_BASE_URL=

# HTTPS Domain Detection (comma-separated domains that should use HTTPS)
# Example: cnull.net,api.cnull.net
HTTPS_DOMAINS=cnull.net

# Ollama Integration
# Set to true to use Ollama for embeddings instead of SentenceTransformers
USE_OLLAMA_EMBEDDINGS=false
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=embeddinggemma

# ========================================
# INTERNAL SERVICES (do not modify)
# ========================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
QDRANT_HOST=qdrant
QDRANT_PORT=6333
REDIS_HOST=redis
REDIS_PORT=6379
