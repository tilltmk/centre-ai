# Flask Configuration
FLASK_ENV=development
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Security
SECRET_KEY=change-this-to-a-random-secret-key
API_KEY=your-api-key-here

# Basic Authentication
BASIC_AUTH_USERNAME=admin
BASIC_AUTH_PASSWORD=change-this-password

# Multiple API Keys (optional)
API_KEY_1=first-api-key
API_KEY_2=second-api-key
# ... up to API_KEY_10

# Database
MEMORY_DB_PATH=mcp_data/memory.db

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Ollama Configuration
OLLAMA_HOST=http://ollama:11434

# Logging
LOG_LEVEL=INFO
