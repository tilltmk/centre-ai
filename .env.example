# Flask Configuration
FLASK_ENV=development
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Security
SECRET_KEY=change-this-to-a-random-secret-key
API_KEY=dev-api-key-12345

# Basic Authentication
BASIC_AUTH_USERNAME=admin
BASIC_AUTH_PASSWORD=admin

# Multiple API Keys (optional)
API_KEY_1=first-api-key
API_KEY_2=second-api-key
# ... up to API_KEY_10

# PostgreSQL Database
POSTGRES_HOST=postgres
POSTGRES_DB=centre_ai
POSTGRES_USER=centre_ai
POSTGRES_PASSWORD=centre_ai_password

# SQLite (fallback memory)
MEMORY_DB_PATH=mcp_data/memory.db

# Qdrant Vector Database
QDRANT_HOST=http://qdrant:6333
QDRANT_API_KEY=

# Git Repositories Path
GIT_REPOS_PATH=/app/git_repos

# Logging
LOG_LEVEL=INFO
